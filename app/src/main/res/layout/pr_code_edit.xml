<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/pr_code_bg"
        android:layout_height="wrap_content">

        <hshealthy.cn.com.customview.CircleImageView
            android:id="@+id/pr_code_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/jiantou"
            android:layout_marginRight="@dimen/dp_12"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_discovery_gray" />

        <TextView
            android:id="@+id/rc_user_name"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_below="@+id/pr_code_avatar"
            android:layout_width="wrap_content"
            tools:text="恒寿堂"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/standard_font_color"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rc_user_adress"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@+id/rc_user_name"
            android:layout_width="wrap_content"
            tools:text="上海市 松江区"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/there_font_color"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/image_qr_code"
            android:layout_below="@+id/rc_user_adress"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_width="285dp"
            android:layout_height="285dp" />



    </RelativeLayout>


    <Button
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:textSize="@dimen/sp_18"
        android:text="发送二维码"
        android:textColor="@color/color_ffffff"
        android:background="@drawable/pr_code_button_bg"
        android:layout_height="45dp" />


</LinearLayout>